<% provide(:title, t("home")) %>
<div class="center jumbotron">
  <h1><%= t("welcome") %></h1>
  <h2><%= t("description") %></h2>
  <% if logged_in? %>
    <%= link_to t("start"), "#", class: "btn btn-lg btn-success" %>
  <% else %>
    <%= link_to t("login"), login_path, class: "btn btn-lg btn-success" %>
    <span>-</span>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-warning" %>
  <% end %>
</div>
